# Instalação
wget http://ftp.unicamp.br/pub/apache/spark/spark-3.0.0-preview2/spark-3.0.0-preview2-bin-hadoop3.2.tgz
tar -xvf spark-3.0.0-preview2-bin-hadoop3.2.tgz
mv spark-3.0.0-preview2-bin-hadoop3.2 /opt/spark/

## Variáveis de ambiente
export SPARK_HOME=/opt/spark
export PATH=$PATH:$SPARK_HOME/bin